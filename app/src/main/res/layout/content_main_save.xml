<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_kotlin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShowCardDetails">
    tools:showIn="@layout/activity_show_card_details">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_entry_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_add_detail"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/rv_entry_details"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="+         Add Another Field"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_save_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rv_entry_details"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/save"
                app:fabSize="normal" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <io.saeid.fabloading.LoadingView
        android:id="@+id/loading_view_long"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:mfl_duration="400"
        app:mfl_onclickLoading="true" />

    <io.saeid.fabloading.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:mfl_duration="400"
        app:mfl_onclickLoading="true" />

    <io.saeid.fabloading.LoadingView
        android:id="@+id/loading_view_repeat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:scaleX="4"
        android:scaleY="4"
        app:mfl_duration="400"
        app:mfl_onclickLoading="true"
        app:mfl_repeat="1" />

</RelativeLayout>